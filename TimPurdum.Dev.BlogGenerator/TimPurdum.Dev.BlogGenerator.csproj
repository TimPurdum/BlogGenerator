<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <GeneratePackageOnBuild Condition="'$(Configuration)' == 'RELEASE'">true</GeneratePackageOnBuild>
        <Title>Blazor Blog Generator</Title>
        <Description>A "mostly" static site blog generator for Blazor WebAssembly blogs.</Description>
        <PackageTags>Blazor;Blog;Static Site Generator;WebAssembly</PackageTags>
        <PackageVersion>1.0.0</PackageVersion>
        <Version>1.0.0</Version>
        <Authors>Tim Purdum</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/TimPurdum/timpurdum.github.io/tree/main/TimPurdum.Dev.BlogCreator</RepositoryUrl>
        <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
        <PackageReadmeFile>ReadMe.md</PackageReadmeFile>
        <AssemblyName>TimPurdum.Dev.BlogGenerator</AssemblyName>
        <RootNamespace>TimPurdum.Dev.BlogGenerator</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="10.0.0-rc.1.25451.107" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.0-rc.1.25451.107" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\TimPurdum.Dev.BlogGenerator.Compiler\TimPurdum.Dev.BlogGenerator.Compiler.csproj"
        PrivateAssets="All">
          <IncludeAssets>TimPurdum.Dev.BlogGenerator.Compiler.dll</IncludeAssets>
          <ExcludeAssets>all</ExcludeAssets>
      </ProjectReference>
      <ProjectReference Include="..\TimPurdum.Dev.BlogGenerator.Shared\TimPurdum.Dev.BlogGenerator.Shared.csproj">
          <IncludeAssets>TimPurdum.Dev.BlogGenerator.Shared.dll</IncludeAssets>
          <IncludeAssets>all</IncludeAssets>
      </ProjectReference>
      <ProjectReference Include="..\markdig\src\Markdig\Markdig.csproj" PrivateAssets="All">
          <IncludeAssets>Markdig.dll</IncludeAssets>
      </ProjectReference>
    </ItemGroup>

    <ItemGroup>
      <None Include="TimPurdum.Dev.BlogGenerator.targets" Pack="true" PackagePath="build\$(AssemblyName)\" >
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
        <None Include="ReadMe.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <Target DependsOnTargets="BuildOnlySettings;ResolveReferences" Name="CopyProjectReferencesToPackage">
        <ItemGroup>
            <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))" />
        </ItemGroup>
    </Target>
</Project>
